APP_NAME=AppSignals
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=appsignals
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=appsignals

# Ingestion rate limits (per API key, per minute)
APPSIGNALS_INGEST_RATE_LIMIT_PER_MINUTE=600

# CORS (comma-separated origins). Leave blank for same-origin only.
APPSIGNALS_CORS_ORIGINS=

# Crash symbolication (optional)
APPSIGNALS_SYMBOLICATION_ENABLED=false
APPSIGNALS_SYMBOLICATION_COMMAND=
APPSIGNALS_SYMBOLICATION_BATCH=50

# Demo seed data (enabled by default in local/testing)
APPSIGNALS_DEMO_SEED=true

REVERB_APP_ID=appsignals
REVERB_APP_KEY=appsignals-key
REVERB_APP_SECRET=appsignals-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# GeoIP Database Path
GEOIP_DATABASE_PATH=storage/geoip/GeoLite2-City.mmdb
